<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/pucture_left_landscape"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <ImageView
            android:layout_width="255dp"
            android:layout_height="370dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/for_mantra" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="388dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="325dp"
        android:layout_marginTop="50dp"
        android:autoLink="all"
        android:shadowColor="@color/design_default_color_error"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="15"
        android:text="@string/res_text"
        android:textColor="#70000000"
        android:textSize="36sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="325dp"
        android:layout_marginTop="@dimen/my_margin_landscape"
        android:background="@drawable/shape_drawable"
        android:backgroundTint="@color/white"

        android:text="@string/button_caption"
        android:textColor="@color/black" />

</FrameLayout><!--"?android:attr/selectableItemBackgroundBorderless"-->